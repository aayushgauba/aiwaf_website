# AIWAF Documentation Website Environment Variables

# SSH Tunnel Configuration (for PythonAnywhere local development)
SSH_HOST=ssh.pythonanywhere.com
SSH_USERNAME=your_pythonanywhere_username
SSH_PASSWORD=your_pythonanywhere_login_password

# Database Configuration - PythonAnywhere
DB_USER=your_pythonanywhere_username
DB_PASSWORD=your_mysql_password
DB_HOST=yourusername.mysql.pythonanywhere-services.com
DB_PORT=3306
DB_NAME=yourusername$databasename

# Alternative: For production without SSH tunnel
# DATABASE_URL=mysql://username:password@hostname:port/database

# Application Security
SECRET_KEY=your-secret-key-here-change-in-production

# Optional: Analytics and Tracking
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# Optional: Email Configuration (for feedback notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=

# Development Settings
FLASK_ENV=production
FLASK_DEBUG=False